<div class="devise-frame">
  <h1 class="my-4">ログイン画面</h1>
  <div class="devise-inner">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field form-row">
      <div class="required-b pt-2 mb-1">
      </div>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'メールアドレス', class: 'form-control col-10 px-2' %>
    </div>
    <div class="field form-row">
      <div class="required-b pt-2 mb-1">
      </div>
      <%= f.password_field :password, autocomplete: "current-password", placeholder: 'パスワード', class: 'form-control col-10 px-2' %>
    </div>
    <div class="actions">
      <%= f.submit "ログイン", class: 'form-control btn-primary my-4' %>
    </div>
    <% end %>
    <%= link_to '会員登録をする方はこちら', new_user_registration_path %>
  </div>
</div>
<%= link_to 'ホームページへ戻る', root_path, class: 'reservation-title' %>
